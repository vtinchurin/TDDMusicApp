<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/trackItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.ru.androidexperts.muzicapp.view.image.CustomImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_artwork"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="8dp"
        android:orientation="vertical">

        <com.ru.androidexperts.muzicapp.view.CustomTextView
            android:id="@+id/authorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:maxLines="1"
            android:layout_marginBottom="4dp"
            tools:text="Author"/>

        <com.ru.androidexperts.muzicapp.view.CustomTextView
            android:id="@+id/songName"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:maxLines="1"
            android:textSize="16sp"
            tools:text="Song name long text long text long text long text long text"/>
    </LinearLayout>

    <com.ru.androidexperts.muzicapp.view.play.PlayStopButton
        android:id="@+id/playButton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_play"
        android:background="@null"
        android:paddingHorizontal="8dp"/>
</LinearLayout>